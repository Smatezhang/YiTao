<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="style_main_tv">
        <item name="android:layout_weight">1</item>
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:textSize">@dimen/sp18</item>
        <item name="android:gravity">center</item>
        <item name="android:paddingTop">@dimen/dp18</item>
        <item name="android:textColor">@color/text_color_hint</item>
        <item name="android:clickable">true</item>
    </style>

    <style name="style_me_tv">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>
    <style name="style_me_tv2">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">@dimen/dp10</item>
        <item name="android:background">@color/white</item>
        <item name="android:padding">@dimen/dp5</item>
        <item name="android:textSize">@dimen/sp20</item>
    </style>
    <style name="AppTheme.Button.EasyShop" parent="Widget.AppCompat.Button.Colored">
        <item name="colorButtonNormal">@color/colorPrimaryDark</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">@dimen/dp20</item>
    </style>
    <style name="AppTheme.EditText.Big" parent="Widget.AppCompat.EditText">
        <item name="android:drawablePadding">@dimen/dp6</item>
        <item name="android:paddingLeft">@dimen/dp6</item>
        <item name="android:paddingRight">@dimen/dp6</item>
        <item name="android:textSize">@dimen/sp20</item>
        <item name="android:textColorHint">@color/text_hint</item>
        <item name="android:textColor">@color/text_goods_name</item>
        <item name="android:singleLine">true</item>
        <item name="android:background">@mipmap/edit_bg_long</item>
    </style>

</resources>
